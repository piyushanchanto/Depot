<h1>Listing products</h1>
<hr />
<%= link_to 'New Product', new_product_path %> | 
<%= link_to 'Store', store_index_path %> |
<hr />
<table>
 	
<% @products.each do |product| %>
  <tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td align="center"><%= image_tag product.image_url, :class =>'list-image', :size =>'20' %></td>
	
	<td width="60%"><br/><br />
		<span class="list-title"><h1><%= product.title %></h1></span><br />
    	<%= product.description %><br /><br />
		Price : <%= number_to_currency(product.price) %>
	</td>
    
	<td class="list-actions"><br/><br /><br />
		<%= link_to 'Show', product %><br /><br/>
   		<%= link_to 'Edit', edit_product_path(product) %><br/><br />
    	<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
	</td>
  </tr>
<tr><td><hr /></td></tr>
<% end %>
</table>
<br />

<%= link_to 'New Product', new_product_path %>
