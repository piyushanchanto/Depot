<!DOCTYPE html>
<html>
<head>
  <title>Book Online Store</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "scaffold" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-52c1076c5cd74f66"></script>
	<script type="text/javascript">
	  addthis.layers({
	    'theme' : 'transparent',
	    'share' : {
	      'position' : 'right',
	      'numPreferredServices' : 5
	    }, 
	    'follow' : {
	      'services' : []
	    },  
	    'whatsnext' : {},  
	    'recommended' : {} 
	  });
  </script>	

</head>
<body class="<%= controller.controller_name %>">
	<div id="banner">
		<%= image_tag("/images/logo.jpg") %>
		<%= @page_title || "Programming BookShelf" %>
		
	</div>

	<div id="user_nav">
  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
  <% else %>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
  <% end %>
</div>
	
	<div id="main">
	<table bgcolor=#8e44ad>
		<tr><td bgcolor="lightgray" width=20% style="vertical-align:text-top" >
			<font size="2">
				
				<div id="user_nav">
				  <% if session[:user_id] %>
				    Hi. <%# #{user.name} %>
				    <%= button_to 'Logout', logout_path, method: :delete %>
				  <% else %>
				    <%= link_to "sign in", login_path %>
				  <% end %>
				</div>
				</font>
				<font size="2">
				<br />Content<br/><br /><hr /><br />
				 <% if session[:user_id] %>
					<% if @cart %>
					<div id="cart"><%= render @cart %></div>
					
					<% end %>
				<% end %>
				<%= link_to 'Home', store_path %><br /><br />
				<%= link_to 'Product List', products_path %><br /><br />
				<%= link_to 'Adding Product', new_product_path %><br /><br />
				<%= link_to 'Show Order List', orders_path %><br /><br />
				<a href="http://www.ask.com" target="_blank">Questions</a><br /><br />
				<a href="http://www.bbc.com">News</a><br /><br />
				<a href="http://www.google.com">Contact</a><br /><br />

				
				
				<% if session[:user_id] %>
						<br /><br />
						<%= link_to 'Order', orders_path %><br /><br />
						<%= link_to 'User', users_path %><br /><br />
						<%= link_to 'Wish List', favs_path %><br /><br />
					
					<%= button_to 'Logout', logout_path, method: :delete %>
				<% end %>
			</font>

			<br>
			<script type="text/javascript" data-pp-pubid="8356fc5b83" data-pp-placementtype="120x90"> (function (d, t) {
"use strict";
var s = d.getElementsByTagName(t)[0], n = d.createElement(t);
n.src = "//paypal.adtag.where.com/merchant.js";
s.parentNode.insertBefore(n, s);
}(document, "script"));
</script>
			
			</td>
			<td width=80%>
				<div id="main">
					<!-- AddThis Trending Content BEGIN -->
					<div id="addthis_trendingcontent"></div>
					<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-52c1076c5cd74f66"></script>
					<script type="text/javascript">
					addthis.box("#addthis_trendingcontent", {
					    feed_title : "",
					    feed_type : "trending",
					    feed_period : "month",
					    num_links : 5,
					    height : "auto",
					    width : "auto"});
					</script>
					<!-- AddThis Trending Content END -->
					<div id="fb-root"></div>
					<script>(function(d, s, id) {
					  var js, fjs = d.getElementsByTagName(s)[0];
					  if (d.getElementById(id)) return;
					  js = d.createElement(s); js.id = id;
					  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
					  fjs.parentNode.insertBefore(js, fjs);
					}(document, 'script', 'facebook-jssdk'));</script>
					<div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
					<h>
					<%= yield %>

					<script src="paypal-button.min.js?merchant=P9ZCNY2RCPHAW" 
    data-button="buynow" 
    data-name="Rails" 
    data-callback="http://localhost:3000" 
    data-env="sandbox"
></script>

					
					<p class="notice"><%= notice %></p>
					       <p class="alert"><%= alert %></p>
					
				</div>
				</div>
			</td>
			
		</tr>
	</table>
	</div>
</body>
</html>
